@{
    ViewData["Title"] = "Trang Chủ";
}

<div class="text-center py-5 mb-5 fade-in">
    <h1 class="display-4 fw-bold text-primary mb-3">Dịch Vụ Chuyển Nhà Trọn Gói Nguyen Hoang Anh</h1>
    <p class="lead text-muted mb-4">Giải pháp chuyển nhà Nhanh chóng - An toàn - Tiết kiệm cho gia đình bạn.</p>
    <div class="d-flex gap-3 justify-content-center">
        <a asp-controller="Booking" asp-action="Create" class="btn btn-primary btn-lg px-5 py-3">Đặt Lịch Ngay</a>
        <a asp-controller="Booking" asp-action="Track" class="btn btn-outline-primary btn-lg px-5 py-3">Tra Cứu Đơn</a>
    </div>
</div>

<div class="row mt-5">
    <div class="col-md-4 mb-4">
        <div class="card h-100 p-4 text-center">
            <div class="mb-3">
                <span style="font-size: 3rem;">🚀</span>
            </div>
            <h4>Nhanh Chóng</h4>
            <p class="text-muted">Đội ngũ chuyên nghiệp, quy trình tối ưu giúp bạn chuyển nhà trong thời gian ngắn nhất.</p>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100 p-4 text-center">
            <div class="mb-3">
                <span style="font-size: 3rem;">🛡️</span>
            </div>
            <h4>An Toàn Tuyệt Đối</h4>
            <p class="text-muted">Đồ đạc được đóng gói cẩn thận, vận chuyển bằng xe chuyên dụng, đảm bảo an toàn 100%.</p>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100 p-4 text-center">
            <div class="mb-3">
                <span style="font-size: 3rem;">💰</span>
            </div>
            <h4>Chi Phí Hợp Lý</h4>
            <p class="text-muted">Báo giá trọn gói minh bạch, không phát sinh chi phí, cạnh tranh nhất thị trường.</p>
        </div>
    </div>
</div>

<div class="row mt-5 py-5 bg-white rounded shadow-sm">
    <div class="col-md-6 d-flex align-items-center justify-content-center p-4">
        <img src="https://images.unsplash.com/photo-1600585152220-90363fe7e115?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" alt="Moving House" class="img-fluid rounded" style="max-height: 300px;">
    </div>
    <div class="col-md-6 p-5">
        <h3>Tại sao chọn Nguyen Hoang Anh?</h3>
        <ul class="list-unstyled mt-3">
            <li class="mb-2">✅ Phục vụ 24/7, kể cả ngày lễ.</li>
            <li class="mb-2">✅ Nhân viên nhiệt tình, trung thực.</li>
            <li class="mb-2">✅ Cam kết bồi thường 100% nếu hư hỏng.</li>
            <li class="mb-2">✅ Miễn phí thùng carton và vật liệu đóng gói.</li>
            <li class="mb-2">✅ Ước tính chi phí ngay lập tức.</li>
        </ul>
        <a asp-controller="Booking" asp-action="Create" class="btn btn-outline-primary mt-3">Liên Hệ Tư Vấn</a>
    </div>
</div>

<!-- Reviews Section -->
@if (ViewBag.Reviews != null && ((List<WebsiteDatLichChuyenNha.Models.Review>)ViewBag.Reviews).Count > 0)
{
    <div class="row mt-5 py-5">
        <div class="col-12 text-center mb-4">
            <h2 class="fw-bold">⭐ Khách Hàng Nói Gì Về Chúng Tôi</h2>
            <p class="text-muted">Đánh giá từ những khách hàng đã sử dụng dịch vụ</p>
        </div>

        @foreach (var review in (List<WebsiteDatLichChuyenNha.Models.Review>)ViewBag.Reviews)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 p-4">
                    <div class="text-warning mb-2" style="font-size: 1.2rem;">
                        @for (int i = 0; i < review.Rating; i++)
                        {
                            <span>★</span>
                        }
                        @for (int i = review.Rating; i < 5; i++)
                        {
                            <span class="text-muted">★</span>
                        }
                    </div>
                    <p class="mb-3">"@review.Comment"</p>
                    <div class="mt-auto">
                        <strong>@review.User?.FullName</strong>
                        <br />
                        <small class="text-muted">@review.CreatedAt.ToString("dd/MM/yyyy")</small>
                    </div>
                    @if (!string.IsNullOrEmpty(review.AdminReply))
                    {
                        <div class="alert alert-light mt-3 mb-0">
                            <small><strong>💬 Nguyen Hoang Anh:</strong> @review.AdminReply</small>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
}
