@{
    ViewData["Title"] = "Trang Chủ";
}

<div class="text-center py-5 mb-5 fade-in">
    <h1 class="display-4 fw-bold text-primary mb-3">Dịch Vụ Sửa Chữa Nhà Cửa Chuyên Nghiệp</h1>
    <p class="lead text-muted mb-4">Giải pháp sửa chữa Điện - Nước - Sơn sửa Nhanh chóng - Uy tín - Giá rẻ.</p>
    <div class="d-flex gap-3 justify-content-center">
        <a asp-controller="Booking" asp-action="Create" class="btn btn-primary btn-lg px-5 py-3">Đặt Lịch Sửa Chữa</a>
        <a asp-controller="Booking" asp-action="Track" class="btn btn-outline-primary btn-lg px-5 py-3">Tra Cứu Đơn</a>
    </div>
</div>

<div class="row mt-5">
    <div class="col-md-4 mb-4">
        <div class="card h-100 p-4 text-center">
            <div class="mb-3">
                <span style="font-size: 3rem;">⚡</span>
            </div>
            <h4>Sửa Chữa Điện Nước</h4>
            <p class="text-muted">Khắc phục sự cố chập điện, rò rỉ nước, lắp đặt thiết bị nhanh chóng, an toàn.</p>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100 p-4 text-center">
            <div class="mb-3">
                <span style="font-size: 3rem;">🎨</span>
            </div>
            <h4>Sơn Sửa & Chống Thấm</h4>
            <p class="text-muted">Dịch vụ sơn nhà, xử lý thấm dột, cải tạo không gian sống đẹp như mới.</p>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100 p-4 text-center">
            <div class="mb-3">
                <span style="font-size: 3rem;">🛠️</span>
            </div>
            <h4>Sửa Chữa Tổng Hợp</h4>
            <p class="text-muted">Sửa cửa, thay khóa, lắp đặt nội thất và các hạng mục sửa chữa vặt khác.</p>
        </div>
    </div>
</div>

<div class="row mt-5 py-5 bg-white rounded shadow-sm">
    <div class="col-md-6 d-flex align-items-center justify-content-center p-4">
        <img src="https://images.unsplash.com/photo-1621905251918-48416bd8575a?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" alt="Home Repair" class="img-fluid rounded" style="max-height: 300px;">
    </div>
    <div class="col-md-6 p-5">
        <h3>Tại sao chọn Nguyễn Hoàng Anh?</h3>
        <ul class="list-unstyled mt-3">
            <li class="mb-2">✅ Thợ tay nghề cao, lý lịch rõ ràng.</li>
            <li class="mb-2">✅ Có mặt sau 30 phút gọi.</li>
            <li class="mb-2">✅ Bảo hành dịch vụ lên đến 12 tháng.</li>
            <li class="mb-2">✅ Báo giá minh bạch trước khi làm.</li>
            <li class="mb-2">✅ Không hài lòng hoàn tiền 100%.</li>
        </ul>
        <a asp-controller="Booking" asp-action="Create" class="btn btn-outline-primary mt-3">Liên Hệ Tư Vấn</a>
    </div>
</div>

<!-- Reviews Section -->
@if (ViewBag.Reviews != null && ((List<WebsiteDatLichChuyenNha.Models.Review>)ViewBag.Reviews).Count > 0)
{
    <div class="row mt-5 py-5">
        <div class="col-12 text-center mb-4">
            <h2 class="fw-bold">⭐ Khách Hàng Nói Gì Về Chúng Tôi</h2>
            <p class="text-muted">Đánh giá từ những khách hàng đã sử dụng dịch vụ</p>
        </div>

        @foreach (var review in (List<WebsiteDatLichChuyenNha.Models.Review>)ViewBag.Reviews)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 p-4">
                    <div class="text-warning mb-2" style="font-size: 1.2rem;">
                        @for (int i = 0; i < review.Rating; i++)
                        {
                            <span>★</span>
                        }
                        @for (int i = review.Rating; i < 5; i++)
                        {
                            <span class="text-muted">★</span>
                        }
                    </div>
                    <p class="mb-3">"@review.Comment"</p>
                    <div class="mt-auto">
                        <strong>@review.User?.FullName</strong>
                        <br />
                        <small class="text-muted">@review.CreatedAt.ToString("dd/MM/yyyy")</small>
                    </div>
                    @if (!string.IsNullOrEmpty(review.AdminReply))
                    {
                        <div class="alert alert-light mt-3 mb-0">
                            <small><strong>💬 Nguyen Hoang Anh:</strong> @review.AdminReply</small>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
}
