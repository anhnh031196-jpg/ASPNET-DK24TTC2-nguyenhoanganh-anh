@model List<WebsiteDatLichChuyenNha.Models.Review>

@{
    ViewData["Title"] = "Quản Lý Đánh Giá";
}

<div class="fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>⭐ Quản Lý Đánh Giá</h2>
        <a asp-action="Index" class="btn btn-outline-primary">← Về Dashboard</a>
    </div>

    <div class="card">
        <div class="card-body">
            @if (Model.Count == 0)
            {
                <div class="alert alert-info text-center">
                    <p class="mb-0">Chưa có đánh giá nào.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Khách Hàng</th>
                                <th>Đơn Hàng</th>
                                <th>Đánh Giá</th>
                                <th>Nhận Xét</th>
                                <th>Trạng Thái</th>
                                <th>Ngày Tạo</th>
                                <th>Hành Động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var review in Model)
                            {
                                <tr>
                                    <td><strong>#@review.Id</strong></td>
                                    <td>@review.User?.FullName</td>
                                    <td><a asp-action="BookingDetails" asp-route-id="@review.BookingId">#@review.BookingId</a></td>
                                    <td>
                                        <div class="text-warning">
                                            @for (int i = 0; i < review.Rating; i++)
                                            {
                                                <span>★</span>
                                            }
                                            @for (int i = review.Rating; i < 5; i++)
                                            {
                                                <span class="text-muted">★</span>
                                            }
                                        </div>
                                    </td>
                                    <td>@(review.Comment.Length > 50 ? review.Comment.Substring(0, 50) + "..." : review.Comment)</td>
                                    <td>
                                        <span class="badge @(review.IsPublic ? "bg-success" : "bg-secondary")">
                                            @(review.IsPublic ? "Công khai" : "Riêng tư")
                                        </span>
                                        @if (!string.IsNullOrEmpty(review.AdminReply))
                                        {
                                            <span class="badge bg-info">Đã phản hồi</span>
                                        }
                                    </td>
                                    <td>@review.CreatedAt.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <a asp-action="ReviewDetails" asp-route-id="@review.Id" class="btn btn-sm btn-primary">Chi Tiết</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
